{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "preserveSymlinks": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "DOM",
      "DOM.Iterable",
      "ScriptHost"
    ]
  },
  "files": [
    "./src/ExamplePackage/index.ts"
  ],
  "include": ["./types/**/*.d.ts"]
}
